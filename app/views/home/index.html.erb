<div class="home">
  <%= render "layouts/header" %>
  <div class="container text-center pb-5">

    <div class="row mt-sm-2 mt-md-3 mt-lg-4 mt-xl-5">
      <div class="col-sm-12">
        <%= image_tag "home_zaat.svg", class: "img-fluid" %>
      </div>
    </div>

    <div class="row text-light py-4 mt-sm-2 mt-md-3 mt-lg-4 mt-xl-5">
      <div class="col-sm-6 p-2 nav navbar">
        <div class="mx-auto text-start">
          <div class="h2 pb-2">Building multimodal AI to expand </div>
          <div class="h2 pb-2">imagination and capabilities</div>
          <div class="h2 pb-2">integrated with Web3</div>
          <div class="nav-navbar py-4">
            <a href="#"><%= image_tag "twitter.svg" %></a>
            <a class="ps-3" href="#"><%= image_tag "discord.svg" %></a>
            <a class="ps-3" href="#"><%= image_tag "github.svg" %></a>
            <a class="ps-3" href="#"><%= image_tag "m.svg" %></a>
            <a class="ps-3" href="#"><%= image_tag "telegram.svg" %></a>
          </div>
        </div>
      </div>

      <div class="col-sm-6 row row-cols-2 mx-0">
        <div>
          <a href="/order/new" class="d-block position-relative" data-turbo-prefetch="false">
            <%= image_tag "home_btn_creat.png", class: "img-fluid btn_shadow_create rounded-4" %>
            <div class="text-white position-absolute top-30 start-50 translate-middle d-flex flex-column align-content-center">
              <div class="h2 fw-bold mb-5 text_shadow_create">Create</div>
            </div>
          </a>
        </div>
        
        <div>
          <a href="/order/earn" class="d-block position-relative" data-turbo-prefetch="false">
            <%= image_tag "home_btn_earn.png", class: "img-fluid btn_shadow_earn rounded-4" %>
            <div class="text-white position-absolute top-30 start-50 translate-middle d-flex flex-column align-content-center">
              <div class="h2 fw-bold fw-bold mb-5 text_shadow_earn">Earn</div>
            </div>
          </a>
        </div>
      </div>

    </div>
    
  </div>

    
</div>