<%= turbo_frame_tag "header_right_button" do %>
  <div class="flash"><%= render "layouts/flash_message" %></div>
  <div class="btn-group">
    <div class="dropdown-toggle cursor-pointer nav" data-bs-toggle="dropdown" data-bs-display="static" aria-expanded="false">
      <%= image_tag "menu.svg", alt: "Menu", class: "h-menu" %>
    </div>
    <ul class="dropdown-menu dropdown-menu-end drop_menu_shadow p-0 mt-2">
      <li class="px-3">
        <%= link_to profile_index_path, data: {"turbo-prefetch": "false", turbo: false}, class: "icon-link text-light lh-lg p-2 text-decoration-none" do %>
          <%= image_tag "my_profile.svg" %> My Profile
        <% end %>
      </li>
      <li class="px-3">
        <%= link_to profile_my_model_path, data: {"turbo-prefetch": "false", turbo: false}, class: "icon-link text-light lh-lg p-2 text-decoration-none" do %>
          <%= image_tag "my_model.svg" %> My Models
        <% end %>
      </li>
      <li><hr class="dropdown-divider border border-dark"></li>
      <li class="px-3">
        <%= link_to "/order/new", data: {"turbo-prefetch": "false", turbo: false}, class: "icon-link text-light lh-lg p-2 text-decoration-none" do %>
        <%= bootstrap_icon "plus-circle", width: 24 %> Create
        <% end %>
      </li>
      <li class="px-3">
        <%= link_to "/order/earn", data: {"turbo-prefetch": "false", turbo: false}, class: "icon-link text-light lh-lg p-2 text-decoration-none" do %>
          <%= bootstrap_icon "currency-dollar", width: 24 %> Earn
        <% end %>
      </li>
      <li><hr class="dropdown-divider border border-dark"></li>
      <li>
        <%#= button_to destroy_user_session_path, class: "border-0 w-100 bg-black icon-link text-light lh-lg py-2 ps-4 text-decoration-none", data: { turbo_method: :delete, turbo_confirm: "Are you sure?"}, method: :delete do %>
        <%= button_to destroy_user_session_path, method: :delete, data: { turbo: false }, class: "border-0 w-100 bg-black icon-link text-light lh-lg py-2 ps-4 text-decoration-none" do %>
          <%= image_tag "exit.svg" %> Log out
        <% end %>
      </li>
    </ul>
  </div>
  <script>
    var backdrop = document.querySelector('.modal-backdrop');
    if (backdrop) {  
        backdrop.parentNode.removeChild(backdrop);  
    }
  </script>
<% end %>